@model VideogameModel


<div class="container bg-secondary-subtle shadow-lg rounded border-black my-5 p-0" style="width: 70%">

    <div class="row g-0">

        <div class="col-md-4">    
            <img src="@Model.ImgUrl" class="img-fluid rounded-start" alt="Immagine @Model.Name">
        </div>

        <div class="col-md-8">    
            <div class="p-3">
                <h1 class="mt-5"><strong>@Model.Name</strong></h1>
                <p>@Model.Description</p>
                <h2><strong>@Model.Price.ToString("0.00") €</strong></h2>
            </div>
        </div>

    </div>

</div>


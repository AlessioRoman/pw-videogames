@model List<VideogameModel>


<div class="w-75 m-auto">
<table class="table table-striped mx-5">
    <thead>
        <tr>
            <th scope="col">Immagine</th>
            <th scope="col">Nome</th>
            <th scope="col">Deacrizione</th>
            <th scope="col">Prezzo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (VideogameModel videogame in Model)
        {
            <tr>
                
                <td><img class="img-fluid img_square" style="width: 15rem;" src="@videogame.ImgUrl" alt=""></td>
                <td>@videogame.Name</td>
                <td>@videogame.Description</td>
                    <td>@videogame.Price.ToString("0.00")</td>
                <td>
                    <a class="btn btn-warning btn-sm mt-2" href="@Url.Action("Update", "Manage", new {id = videogame.Id})">
                            <img src="https://cdn-icons-png.flaticon.com/128/4391/4391389.png" width="24" heigh="24">
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm mt-2" href="@Url.Action("Delete", "Manage", new {id = videogame.Id})">
                            <img src="https://cdn-icons-png.flaticon.com/128/9789/9789276.png" width="24" height="24">
                    </a>
                </td>
                
            </tr>

        }
    </tbody>
</table>
</div>
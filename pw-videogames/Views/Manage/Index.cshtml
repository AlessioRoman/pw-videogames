@model List<VideogameModel>

<table class="table table-striped mx-5">
    <thead>
        <tr>
            <th scope="col">Immagine</th>
            <th scope="col">Nome</th>
            <th scope="col">Deacrizione</th>
            <th scope="col">Prezzo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (VideogameModel videogame in Model)
        {
            <tr>
                <td><img class="img-fluid img_square" style="width: 15rem;" src="@videogame.ImgUrl" alt=""></td>
                <td>@videogame.Name</td>
                <td>@videogame.Description</td>
                <td>@videogame.Price</td>
            </tr>
            <form asp-controller="Manage" asp-action="Delete" asp-route-id="@videogame.Id" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" style="height: 2.5rem;" class="btn btn-primary bg-redText">Delete</button>
            </form>
        }
    </tbody>
</table>